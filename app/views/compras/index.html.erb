<p id="notice"><%= notice %></p>

<div style="border-left: 2px solid #073763; padding: 15px; background: #e8f4ff;">
<p>
  <strong>Nome:</strong>
  <%= @cliente.name %>
</p>

<p>
  <strong>CPF:</strong>
  <%= @cliente.cpf %>
</p>


<p>
  <strong>Celular:</strong>
  <%= @cliente.celucar %>
</p>


<p>
  <strong>Email:</strong>
  <%= @cliente.email %>
</p>


</div>
<hr>
<br>
<br>

<%= form_for(@cliente) do |f| %>
  





    <fieldset>
      <legend><%= Venda.human_attribute_name(:vendas) %> <%= f.add_nested_fields_link :vendas, '<i class="align-middle" data-feather="plus-square"></i>'.html_safe, style: "margin-top: 25px; color: #000;" %></legend>
    </fieldset>

	  
      <div class="row">
        <%= f.nested_fields_for :vendas do |ff| %>   
          
                  
          <div class="col-6" style="margin-right: 25px; float:left;" >
            
              <%= ff.label(:produto,'PRODUTO') %>
              <%= ff.collection_select(:produto_id, Produto.all, :id, :nome, {include_blank: true}, class: 'form-control') %>
            
          </div>
          
          <div class="col-2" style="margin-right: 25px; float:left;">
            
              <%= ff.label(:quantidade, 'QUANTIDADE') %>
              <%= ff.text_field :quantidade, :class=>"form-control" %>
              
            
          </div>
          
          <div class="col-2" style="margin-right: 25px; float:left;">
            
              <%= ff.label(:valor_venda, 'PREÃ‡O SUGERIDO') %>
              <%= ff.text_field :valor_venda, :class=>"form-control" %>
              
            
          </div>

                          
          <div class="col-2">
              <%= f.add_nested_fields_link :vendas, '+', style: "margin-top: 25px;" %>
              <%= ff.remove_nested_fields_link '-', style: "margin-top: 25px;" %>    
          </div>
          
        <% end %>
      </div>

  







<br>
<br>

<br>


  <div class="actions pull-right">
    <%= link_to t('all'), new_cliente_venda_path(@cliente), class: 'btn btn-default' %>
    <%= f.submit id: 'submit_rh', class: 'btn btn-primary', data: {disable_with: t('processing')} %>
  </div>
 



<% end %>





